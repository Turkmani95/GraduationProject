@model IEnumerable<MvcApplicationTest1.DAL.issue>

@{
    ViewBag.Title = "Index";
}

<h2>issues in Tag @ViewBag.title</h2>


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.keyname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descreption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estimate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.assignee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rankid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sprintid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.projectid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.keyname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descreption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.priority)
            </td>
            <td>
                @Html.ActionLink(Html.DisplayFor(modelItem => item.tags).ToHtmlString(), "Viewtag", "issues", new { id = item.id }, null)   
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estimate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assignee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rankid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sprintid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.projectid)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>

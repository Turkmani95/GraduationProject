@model IEnumerable<MvcApplicationTest1.DAL.Comment>

@{
    ViewBag.Title = "Index";
}

<div>
    <h2>Comments</h2>

    <p>
        @Html.ActionLink("Add Comment", "Create", new { pid = ViewBag.pid, isid = ViewBag.isid })
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.projectid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.issueid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comment1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.projectid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.issueid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comment1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>

@model MvcApplicationTest1.Models.AgileClass



<link rel="stylesheet" type="text/css" href="~/Content/agileboard.css">
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

<script>
    $(document).ready(function () {
        $(".Sortable").sortable({
            cancel: ".disable-sort-item",
            connectWith: ".connectedSortable",
            update: function (event, ui) {
                var itemIds = "";
                $("#Sortable").find(".taskSingleInline").each(function () {
                    var itemId = $(this).attr("data-issueid");
                    itemIds = itemIds + itemId + ",";
                });

                $.ajax({
                    url: '@Url.Action("UpdateIssuesAjax", "Column")',
                    data: { itemIds: itemIds },
                    type: 'POST',
                    success: function (data) { },
                    error: function (xhr, status, error) { }
                })

            }
        });

    });
</script>

<style>
    .Sortable {
        border: 1px solid #eee;
        width: 250px;
        min-height: 20px;
        list-style-type: none;
        margin: 0;
        padding: 5px 5px 0 0;
        float: left;
        margin-right: 10px;
    }

        .Sortable li {
            margin: 5px 5px 5px 5px;
            padding: 5px;
            font-size: 1.2em;
            width: 230px;
            color: #333;
            background: #fafafa;
            font-weight: bold;
            min-height: 150px;
            border: 1px solid #ccc;
        }

            .Sortable li:hover {
                background: #eee;
            }

    .inline {
        display: inline-block;
    }

    .actions {
        position: absolute;
        bottom: 0px;
    }

    .icon:hover {
        width: 25px;
        height: 25px;
    }
</style>
<br />
<h2>Agile Board of Project @Html.Action("projectName", "project", new { id = @ViewBag.pid })</h2>
@using (Html.BeginForm("searchissues", "issues", new { pid = ViewBag.pid }, FormMethod.Get, new { @class = "form-inline my-2 my-lg-0" }))
{
    <input hidden type="text" name="pid" id="pid" value="@ViewBag.pid">
    <input class="form-control mr-sm-2" type="text" name="Search" id="Search" placeholder="Search For Issues">
    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
}
<br />
@using (Html.BeginForm("indexproject", "Column", new { id = ViewBag.pid }, FormMethod.Post, new { @class = "form-inline my-2 my-lg-0", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)



    List<SelectListItem>
               listItems = new List<SelectListItem>
                   ();
    listItems.Add(new SelectListItem
     {
         Text = "Name (A - Z)",
         Value = "5"

     });
    listItems.Add(new SelectListItem
     {
         Text = "Name (Z - A)",
         Value = "6"

     });
    listItems.Add(new SelectListItem
    {
        Text = "KeyName (A - Z)",
        Value = "3"

    });
    listItems.Add(new SelectListItem
    {
        Text = "KeyName (Z - A)",
        Value = "4"

    });
    listItems.Add(new SelectListItem
    {
        Text = "Priority High To Low",
        Value = "1"

    }); listItems.Add(new SelectListItem
    {
        Text = "Priority Low to High",
        Value = "2"

    });


    List<SelectListItem>
          listItems2 = new List<SelectListItem>
              ();
    listItems2.Add(new SelectListItem
    {
        Text = "User Story",
        Value = "1"

    });
    listItems2.Add(new SelectListItem
     {
         Text = "Bug",
         Value = "2"

     });

    @Html.DropDownList("sort", listItems, "Sort By", new { @class = "form-control" })
    @Html.DropDownList("filter", listItems2, "Filter By", new { @class = "form-control" })


    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Sort</button>




}
<hr />




<div>

@if (User.IsInRole("developer") || User.IsInRole("admin"))
{
    <a class="btn btn-primary inline" href="@Url.Action("Indexproject", "Column", new { id = ViewBag.pid })">Update Positions</a>
}

@if (User.IsInRole("teamleader") || User.IsInRole("admin"))
{
    <a class="btn btn-primary inline" href="@Url.Action("Create", "Column", new { id = ViewBag.pid }, null)"> + Column</a>
}
    <br />
    <br />



    <div id="Sortable" style="cursor:pointer">

        @{     int i = 1;
             foreach (var item in Model.Columns)
             {

                 //var column = Model.Columns.Where(m => m.id == i);
                <div class="inline">
                    @* for separate the column from the issue *@
                    <h2 hidden class="list-group-items taskSingleInline" id="0" data-issueid="0"></h2>
                    <h2 class="list-group-items taskSingleInline title dd-handle" id="@item.colid" data-issueid="@(item.colid)">
                        @item.name
                    </h2>

                    <ul class="list-group items connectedSortable Sortable kanban to-do">
                        @* for displaying the issues in each column *@
                        @foreach (var item1 in Model.issues.Where(m => m.status == item.colid))
                        {


                            @*if the user isnt the assignee of the issue because of update positions and edit *@
                            if (item1.assignee != Session["UserName"].ToString())
                            {
                                <li class="list-group-item disable-sort-item taskSingleInline dd-item" id="issue@(item1.id)" data-issueid="@(item1.id)" >
                                    <p class="title dd-handle">
                                        @Html.ActionLink(Html.DisplayFor(modelItem => item1.descreption).ToHtmlString(), "details", "issues", new { id = item1.id }, new { @style = "word-wrap: break-word;width : 100%;height:85px;" })
                                    </p>
                                    <div class="actions">
                                        @if (User.IsInRole("developer") || User.IsInRole("projectowner"))
                                        {
                                            <p class="inline">
                                                <a href="@Url.Action("Create","attachment",new { pid = item1.projectid , isid = item1.id})">
                                                    <img class="icon" src="\Content\attach.png" width="20" height="20" />
                                                </a>
                                                |
                                            </p>
                                        }
                                       

                                        @if (item1.priority == "1")
                                        {

                                            <p class="inline">

                                                <img class="icon" src="\Content\red.png" width="20" height="20" />

                                            </p>
                                        }
                                        @if (item1.priority == "2")
                                        {

                                            <p class="inline">

                                                <img class="icon" src="\Content\orange.png" width="20" height="20" />

                                            </p>
                                        }
                                        @if (item1.priority == "3")
                                        {

                                            <p class="inline">

                                                <img class="icon" src="\Content\green.png" width="20" height="20" />

                                            </p>
                                        }

                                    </div>
                                </li>}
                            else
                            {
                                <li class="list-group-item taskSingleInline dd-item" id="issue@(item1.id)" data-issueid="@(item1.id)">
                                    <p class="title dd-handle">
                                        @Html.ActionLink(Html.DisplayFor(modelItem => item1.descreption).ToHtmlString(), "details", "issues", new { id = item1.id }, new { @style = "word-wrap: break-word;width : 100%;height:85px;" })
                                    </p>
                                    <div class="actions">
                                        @if (User.IsInRole("developer") || User.IsInRole("projectowner"))
                                        {
                                            <p class="inline">
                                                <a href="@Url.Action("Create","attachment",new { pid = item1.projectid , isid = item1.id})">
                                                    <img class="icon" src="\Content\attach.png" width="20" height="20" />
                                                </a>
                                                |
                                            </p>
                                        }
                                        @if ((item1.assignee != null && Convert.ToString(Session["UserName"]) == item1.assignee))
                                        {
                                            <p class="inline">
                                                <a href="@Url.Action("edit","issues",new { id=item1.id})">
                                                    <img class="icon" src="\Content\edit.png" width="20" height="20" />
                                                </a>
                                                |
                                            </p>
                                        }

                                        @if (item1.priority == "1")
                                        {

                                            <p class="inline">

                                                <img class="icon" src="\Content\red.png" width="20" height="20" />

                                            </p>
                                        }
                                        @if (item1.priority == "2")
                                        {

                                            <p class="inline">

                                                <img class="icon" src="\Content\orange.png" width="20" height="20" />

                                            </p>
                                        }
                                        @if (item1.priority == "3")
                                        {

                                            <p class="inline">

                                                <img class="icon" src="\Content\green.png" width="20" height="20" />

                                            </p>
                                        }
                                        |
                                        <p class="inline">

                                            <img class="icon" src="\Content\hand.ico" width="20" height="20" />

                                        </p>

                                    </div>
                                </li>}


                        }
                    </ul>
                </div>

                        i++;
             }

        }
    </div>


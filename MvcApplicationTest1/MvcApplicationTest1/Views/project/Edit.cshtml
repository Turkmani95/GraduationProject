@model MvcApplicationTest1.DAL.project

@{
    ViewBag.Title = "Edit";
}
 <br /> 

<h2>Edit Project</h2> 
<hr />         

@using (Html.BeginForm("Edit", "Project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    

        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="col-md-2 control-label">Project Name</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.projectname, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.projectname)
            </div>
        </div>

        
        @Html.HiddenFor(model => model.date)
        @Html.HiddenFor(model => model.projecttype)
        @Html.HiddenFor(model => model.projectkey)
         @Html.HiddenFor(model => model.projectleader)
        <div class="form-group">
            <label class="col-md-2 control-label">Project Owner</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.projectowner, (SelectList)ViewBag.usersqq, "Select Project Owner", new { @class = "form-control" })

            </div>
        </div>

        

   

        <p>@ViewBag.ErrorMessage</p>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a class="btn btn-primary inline" href="@Url.Action("Index", "project")">Back To Projects List</a>
        </div>
    </div>
    
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model IEnumerable<MvcApplicationTest1.DAL.Tag>

@{
    ViewBag.Title = "Index";
}
<script>
    $(document).ready(function () {
        $("#Appuser").DataTable({
            language: {
                paginate: {
                    next: '&#8594;', // or '→'
                    previous: '&#8592;' // or '←'
                }
            }
        });
    })
</script>

<h1>Issues in Tag @ViewBag.tag </h1>

<table id="Appuser" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
               Key Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.project.projectkey)
            </th>
            <th>
                Tag
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(Html.DisplayFor(modelItem => item.issue.keyname).ToHtmlString(), "Details", "issues", new { id = item.issueid }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.project.projectkey)
                </td>
                <td>
                    @Html.ActionLink(Html.DisplayFor(modelItem => item.Tag1).ToHtmlString(), "issuesintag", "Tags", new { pid = item.projectid, tagid = item.id }, null)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </tbody>

</table>
